<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="AppTheme.Base">

        <item name="android:windowContentTransitions">true</item>

        </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue400</item>
        <item name="colorPrimaryDark">@color/blue600</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">#4d4d4d</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="windowActionBarOverlay">false</item>


    </style>

    <style name="AppTheme.Details" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        </style>

    <style name="whatTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AmberCheckBox">
        <item name="android:theme">@style/CheckBoxAppThemeAmber</item>
    </style>

    <style name="IndigoCheckBox">
        <item name="android:theme">@style/CheckBoxAppThemeIndigo</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BlueCheckBox">
        <item name="android:theme">@style/CheckBoxAppThemeBlue</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="CheckBoxAppThemeAmber">
        <item name="android:colorAccent">
            @color/amber400
        </item>
        <item name="android:colorControlNormal">
            @color/amber400
        </item>
        <item name="android:colorControlHighlight">
            @color/amber400
        </item>

        <item name="android:colorControlActivated">
            @color/amber400
        </item>
    </style>


    <style name="CheckBoxAppThemeIndigo">
        <item name="android:colorAccent">
            @color/indigo300
        </item>
        <item name="android:colorControlNormal">
            @color/indigo300
        </item>
        <item name="android:colorControlHighlight">
            @color/indigo300
        </item>

        <item name="android:colorControlActivated">
            @color/indigo300
        </item>

        <item name="colorAccent">@color/indigo300</item>
        <item name="android:textColorSecondary">@color/indigo300</item>

    </style>


    <style name="CheckBoxAppThemeBlue">
        <item name="android:colorAccent">
            @color/blue400
        </item>
        <item name="android:colorControlNormal">
            @color/blue400
        </item>
        <item name="android:colorControlHighlight">
            @color/blue400
        </item>

        <item name="android:colorControlActivated">
            @color/blue400
        </item>

        <item name="colorAccent">@color/blue400</item>
        <item name="android:textColorSecondary">@color/blue400</item>

    </style>


    <style name="Theme.ShowDetailsActivity" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>


    </style>




    <style name="textShowTimeLine">
        <item name="android:textSize">14sp</item>

    </style>


    <style name="TutorialAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/yellow</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">@color/blue400</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="AreYouSureAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/yellow</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">@color/red400</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

</resources>
